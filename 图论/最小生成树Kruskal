#include <bits/stdc++.h>
using namespace std;
int n,m;
struct node
{
	int u,v,w;
}a[500010];
int fa[100011] = {0};
int find(int x){
	if(fa[x]==x) return x;
	return fa[x] = find(fa[x]);
}
void hb(int x,int y){
	fa[find(x)] = find(y);
}
int mycmp(node x,node y){
	return x.w < y.w;
}
int main(void)
{
	cin >> n >> m;
	for(int i=1;i<=m;i++){
		cin >> a[i].u >> a[i].v >> a[i].w;
	}
	for(int i=1;i<=n;i++) fa[i] = i;
	sort(a+1,a+1+m,mycmp);
	int res = 0, cnt = 0;
	for(int i=1;i<=m;i++){
		int fu = find(a[i].u), fv = find(a[i].v);
		if(fu==fv) continue;
		else{
			res += a[i].w;
			hb(fu,fv);
			cnt++;
			if(cnt>=n-1) break;
		}
	}
	cout << res;
	return 0;
}
